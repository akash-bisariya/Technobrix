<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.akashbisariya.technobrix.MainActivity">

    <CardVi

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:id="@+id/iv_image"/>


    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/pb_image"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_event_type"
        android:text="Social"
        android:padding="10dp"
        android:layout_margin="10dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_event_name"
        android:text="Namaste"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="@id/iv_image"
        android:layout_margin="10dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_event_like"
        android:text="Like"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="@id/iv_image"
        app:layout_constraintBottom_toBottomOf="@id/iv_image"
        android:layout_margin="10dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_event_date"
        android:text="Date"
        android:paddingLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/iv_image"
        android:layout_margin="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_event_address"
        android:text="Address"
        app:layout_constraintTop_toBottomOf="@id/tv_event_date"
        android:paddingLeft="10dp"
        android:layout_margin="10dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_event_address"/>
</android.support.constraint.ConstraintLayout>
